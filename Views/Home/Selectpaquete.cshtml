@{
    ViewData["Title"] = "Seleccionar Paquete";
}

<link rel="stylesheet" href="@Url.Content("~/css/selectpaquete.css")" asp-append-version="true" />

@if(ViewBag.error) {
    <p>Error. Por favor ingrese los datos nuevamente y de forma correcta.</p>
}

<form action='@Url.Action("GuardarPaquete")'>
    <h3>Seleccione el destino:</h3>
    <div class="lista"><ol>
        @for (int i = 0; i < ViewBag.ListaDestinos.Count; i++)
        {
            <li>@ViewBag.ListaDestinos[i]</li>
        }
    </ol>
    </div>
    <input type="number" name="destino"> </input>

    <h3>Seleccione Excursion</h3>
    <div> 
        @foreach(var i in ViewBag.ListaExcursiones) {
            <img src="@Url.Content(i)" width="19%" height="auto" alt="excursion"> </img>
        }
    </div>
    <input type="number" name="excursion"> </input>

    <h3>Seleccione Hotel</h3>
    <div>
    @foreach(var i in ViewBag.ListaHoteles) {
        <img src="@Url.Content(i)" width="19%" height="auto" alt="hotel"> </img>
    }
    </div>
    <br>
    <input type="number" name="hotel"> </input>
    
    <h3>Seleccione Aerolinea</h3>
    <div>
    @foreach(var i in ViewBag.ListaAereos) {
        <img src="@Url.Content(i)" width="19%" height="auto" alt="aerolinea"> </img>
    }</div>
    <br>
    <input type="number" name="aereo"> </input>
    <br/>

    <input type="submit" value="Crear"> </input>
    
</form>